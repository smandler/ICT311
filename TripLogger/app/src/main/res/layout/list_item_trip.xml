<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_item_trip_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="Trip Title"
        android:padding="4dp"
        android:textColor="@color/accent_material_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/list_item_trip_destination_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Trip Destination"
        android:padding="4dp"
        android:layout_below="@+id/list_item_trip_title_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/list_item_trip_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Trip Date"
        android:padding="4dp"
        android:layout_below="@+id/list_item_trip_destination_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>